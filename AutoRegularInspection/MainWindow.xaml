<Window x:Class="AutoRegularInspection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:AutoRegularInspection.Models"
        mc:Ignorable="d"
        Title="外观检查自动报告" Height="550" Width="1300">
    <Window.Resources>
        <local:EnumConverter x:Key="eConverter"/>
        <local:ComponentValueConverter x:Key="cConverter"/>
        <local:DamageComboBoxConverter x:Key="damageComboBoxConverter"/>
    </Window.Resources>
    
    <Grid>

        <Grid.Resources>
            
            <!--<Style TargetType="{x:Type DataGridCell}">
                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDown" />
                <EventSetter Event="PreviewTextInput" Handler="DataGridCell_PreviewTextInput" />
            </Style>-->

            <local:BridgePart x:Key="BridgeDeckEnum">BridgeDeck</local:BridgePart>
            <local:BridgePart x:Key="SuperSpaceEnum">SuperSpace</local:BridgePart>
            <local:BridgePart x:Key="SubSpaceEnum">SubSpace</local:BridgePart>

            <sys:Double x:Key="DataGridFontSize">13</sys:Double>
            <sys:Int32 x:Key="ColumnCounts">5</sys:Int32>
            <sys:Int32 x:Key="TabControlRowIndex">1</sys:Int32>
            <sys:Int32 x:Key="OperationButtonRowIndex1">2</sys:Int32>
            <sys:Int32 x:Key="OperationButtonRowIndex2">3</sys:Int32>
            <sys:Int32 x:Key="CommonButtonRowIndex">4</sys:Int32>
            <sys:Int32 x:Key="CopyRightRowIndex">5</sys:Int32>
            <sys:Int32 x:Key="StatusBarRowIndex">6</sys:Int32>
            <GridLength x:Key="OperationButtonRowHeight">50</GridLength>
            <GridLength x:Key="CommonButtonRowHeight">50</GridLength>
            <GridLength x:Key="CopyRightRowHeight">30</GridLength>
            <GridLength x:Key="StatusBarRowHeight">30</GridLength>

            <!--Create list of enumeration values-->

            <!--Create an instance of the converter for Email-->
            <!--<local:EmailConverter x:Key="EmailConverter" />-->
            <!--<ObjectDataProvider x:Key="myComboBox" MethodName="GetValues" ObjectType="{x:Type core:Object}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type Type="local:BridgeDamage"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>-->
            
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="{StaticResource OperationButtonRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource OperationButtonRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource CommonButtonRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource CopyRightRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource StatusBarRowHeight}"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="{StaticResource ColumnCounts}" FontSize="{StaticResource DataGridFontSize}">
            <!-- 参考 https://www.cnblogs.com/lk-kk/p/4609026.html-->
            <MenuItem Header="文件">
                <MenuItem Header="退出" Click="MenuItem_Exit_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="工具">
                <MenuItem Header="选项" Click="MenuItem_Option_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="查看源代码" Click="MenuItem_ViewSourceCode_Click" ></MenuItem>
                <MenuItem Header="关于" Click="MenuItem_About_Click" ></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="{StaticResource TabControlRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}" FontSize="{StaticResource DataGridFontSize}">
            <TabItem Header="桥面系">
                <Grid>
                    <DataGrid  Name="BridgeDeckGrid" AutoGenerateColumns="False" ItemsSource="{Binding GridSource.GridData}">
                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />

                            <DataGridTemplateColumn Header="要素（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding Source={x:Static local:GlobalData.ComponentComboBox}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding ComponentValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="要素" />

                            <DataGridTemplateColumn Header="缺损类型（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding ComponentValue
                                            ,Converter={StaticResource damageComboBoxConverter},ConverterParameter={StaticResource BridgeDeckEnum}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding DamageValue,Mode=TwoWay}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                            <DataGridTemplateColumn Width="Auto" Header="照片预览">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding PicturePreview}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Comment}"
                                Header="备注" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Unit1}"
                                Header="单位1" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Unit1Counts}"
                                Header="单位1数量" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Unit2}"
                                Header="单位2" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Unit2Counts}"
                                Header="单位2数量" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="上部结构" FontSize="{StaticResource DataGridFontSize}">
                <Grid>
                    <DataGrid  Name="SuperSpaceGrid" AutoGenerateColumns="False" ItemsSource="{Binding GridSource.GridData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />

                            <DataGridTemplateColumn Header="构件类型（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding Source={x:Static local:GlobalData.SuperSpaceComponentComboBox}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding ComponentValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />

                            <DataGridTemplateColumn Header="缺损类型（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding ComponentValue
                                            ,Converter={StaticResource damageComboBoxConverter},ConverterParameter={StaticResource SuperSpaceEnum}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding DamageValue,Mode=TwoWay}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PicturePreview}"
                                Header="照片预览" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Comment}"
                                Header="备注" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="下部结构" FontSize="{StaticResource DataGridFontSize}">
                <Grid>
                    <DataGrid  Name="SubSpaceGrid" AutoGenerateColumns="False" ItemsSource="{Binding GridSource.GridData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />

                            <DataGridTemplateColumn Header="构件类型（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding Source={x:Static local:GlobalData.SubSpaceComponentComboBox}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding ComponentValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />

                            <DataGridTemplateColumn Header="缺损类型（枚举）" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding ComponentValue
                                            ,Converter={StaticResource damageComboBoxConverter},ConverterParameter={StaticResource SubSpaceEnum}}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding DamageValue,Mode=TwoWay}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Comment}"
                                Header="备注" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>

        <CheckBox Grid.Row="{StaticResource OperationButtonRowIndex1}" Grid.Column="0" Margin="10" Content="启动时自动检查更新" VerticalAlignment="Center" Name="AutoCheckForUpdateCheckBox" Click="AutoCheckForUpdateCheckBox_Click"/>
        <CheckBox Grid.Row="{StaticResource OperationButtonRowIndex1}" Grid.Column="1" Margin="10" Content="备注列插入Word表格" VerticalAlignment="Center" Name="CommentColumnInsertTableCheckBox" Click="CommentColumnInsertTableCheckBox_Click"/>

        <Button Grid.Row="{StaticResource OperationButtonRowIndex2}" Grid.Column="0" Margin="10" Click="BackupExcel_Click">备份Excel</Button>
        <Button Grid.Row="{StaticResource OperationButtonRowIndex2}" Grid.Column="1" Margin="10" Click="SaveExcel_Click">保存到Excel</Button>
        <Button Grid.Row="{StaticResource OperationButtonRowIndex2}" Grid.Column="2" Margin="10" Click="OpenExcel_Click">打开Excel</Button>
        <Button Grid.Row="{StaticResource OperationButtonRowIndex2}" Grid.Column="3" Margin="10" Click="GenerateDamageStatisticsTable_Click">生成病害统计汇总表</Button>
        <Button Grid.Row="{StaticResource OperationButtonRowIndex2}" Grid.Column="4" Margin="10" Click="Test_Click">自定义功能测试</Button>
        
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="0" Margin="10" Click="AutoReport_Click">自动生成报告</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="1" Margin="10" Click="OpenReport_Click">打开报告</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="2" Margin="10" Click="SuggestionButton_Click">查看参考建议</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="3" Margin="10" Click="CheckForUpdateButton_Click">检查更新</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="4" Margin="10" Click="DisclaimerButton_Click">免责声明</Button>
        <Label Grid.Row="{StaticResource CopyRightRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}" Content="Copyright © 福建省建筑科学研究院 福建省建筑工程质量检测中心有限公司 2020" VerticalAlignment="Center"/>
        <StatusBar  Grid.Row="{StaticResource StatusBarRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
